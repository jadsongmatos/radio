generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  // provider = "sqlite"
  provider = "postgresql"
}

model RadioRequest {
  id            String    @id @default(cuid())
  recordingMbid String
  trackName     String
  artistName    String
  releaseName   String?
  coverUrl      String?
  youtubeUrl    String
  createdAt     DateTime  @default(now())
  deleteAt      DateTime?
  durationSec   Int

  @@index([createdAt])
  @@index([deleteAt])
}
